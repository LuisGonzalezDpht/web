---
import { Icon } from "astro-icon/components";
---

<section id="home" class="w-full h-screen relative">
  <div class="w-full h-full relative bg-gradient">
    <div
      class="w-full h-full flex flex-col justify-center items-center transition-all bg-clouds gap-y-3"
    >
      <h1 class="title-home">
        Hi,<br />I'm <strong class="font-primary">Luis Gonzalez</strong><br
        />Frontend Developer
      </h1>
      <div class="max-w-sm w-full flex gap-x-2 justify-center">
        <button>Download CV</button>
        <button class="btn-primary">Contact Info</button>
      </div>
      <div class="max-w-sm w-full flex gap-x-5 justify-center">
        <a
          href="https://www.linkedin.com/in/luis-gonzalez-dpht/"
          target="_blank"
        >
          <Icon name="linkedin" class="invert text-2xl" />
        </a>
        <a href="https://github.com/LuisGonzalezDpht" target="_blank">
          <Icon name="github" class="text-2xl" />
        </a>
      </div>
    </div>
    <div class="absolute bottom-0 left-0 w-full z-10">
      <picture class="w-full">
        <source srcset="/split-dark.svg" media="(prefers-color-scheme: dark)" />
        <img
          class="w-full h-48 rotate-180"
          src="/split-light.svg"
          alt="split from https://www.shapedivider.app/"
        />
      </picture>
    </div>
  </div>
</section>

<style>
  .title-home {
    font-size: 2.5rem;
  }
</style>
